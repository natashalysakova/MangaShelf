@if (Volumes.Any())
{
    <MudGrid Justify="@justification" Spacing="6">
        @foreach (var volume in Volumes)
        {
            <MudItem xs="2">
                <SmallCard Volume="@volume" />
            </MudItem>
        }
    </MudGrid>
}


@code {
    [EditorRequired]
    [Parameter]
    public IEnumerable<CardVolumeDto> Volumes { get; set; }


    Justify justification = Justify.FlexStart;

}
