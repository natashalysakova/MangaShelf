<MudTooltip Text="@Text"
            Placement="Placement.Bottom"
            Duration="250"
            Delay="250"
            Color="Color.Success"
            Arrow="true">
    @ChildContent
</MudTooltip>

@code {
    [Parameter]
    public string? Text { get; set; }

    [Parameter] 
    public RenderFragment? ChildContent { get; set; }
}
                