<img src="@ImageUrl" 
     class="@Class"
     alt="@Alt"
     onerror="
     this.onerror=null; 
     if (this.src != '@UIConstants.ImageFallbackUrl') 
         this.src = '@UIConstants.ImageFallbackUrl';"/>

@code {
    [Parameter]
    public string ImageUrl { get; set; } = string.Empty;

    [Parameter]
    public string Class { get; set; } = string.Empty;

    [Parameter]
    public string Alt { get; set; } = string.Empty;
}
