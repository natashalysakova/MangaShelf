<MudStack Row="true" Spacing="0">
    @for (int i = 0; i < Math.Floor(RatingValue); i++)
    {
        <MudIcon Icon="@Icons.Material.Filled.Star" Color="Color.Warning" />
        NumberOfStars++;
    }

    @if (RatingValue % 1 != 0)
    {
        double decimalPart = RatingValue % 1;

        if (decimalPart > 0)
        {
            <MudIcon Icon="@Icons.Material.Filled.StarHalf" Color="Color.Warning" />
            NumberOfStars++;
        }
    }
    
    @for (int i = NumberOfStars; i < 5; i++)
    {
        <MudIcon Icon="@Icons.Material.Filled.StarBorder" Color="Color.Warning" />
    }
</MudStack>

@code {
    [Parameter]
    public double RatingValue { get; set; }

    protected int NumberOfStars { get; set; }
}